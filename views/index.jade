        .thing
            // Show Schedule MODAL
            .modal#showScheduleModal
                .modal-dialog
                    .modal-content
                        .modal-header
                            button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
                            h4.modal-title Current Schedule
                        .modal-body
                            #wordSchedule.col-md-10
                                ul#wordList.list-group.scrollable-menu.scrollbar
                        .modal-footer
                            button.btn.btn-default(data-dismiss="modal") Close


            // Add Words MODAL
            .modal#AddWordsModal
                .modal-dialog
                    .modal-content
                        .modal-header
                            button.close(type="button" data-dismiss="modal" aria-hidden="true") &times;
                            h4.modal-title Add Words
                        .modal-body
                            p Add some new words to the DB below
                            .row.modalInputs#addWord
                                .inputCols
                                    label French
                                    input.form-control#inputFrench(type="text", placeholder="Fran√ßais")
                                .inputCols
                                    label English
                                    input.form-control#inputEnglish(type="text", placeholder="English")
                        .modal-footer
                            button.btn.btn-default(data-dismiss="modal") Close
                            button.btn.btn-success#btnAddWord Add


            // Wrapper
            #wrapper
                #wordList2.panel.panel-default
